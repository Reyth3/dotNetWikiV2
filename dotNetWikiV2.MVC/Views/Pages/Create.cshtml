@model dotNetWikiV2.MVC.Models.DB.Page

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-2xl pt-2">Create new page</h4>
<hr/>
<div class="col-md-4">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-red-600 bg-yellow-100 rounded-2xl p-2"></div>
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="block p-2 rounded-lg border-2 border-solid w-full" />
            <span asp-validation-for="Title" class="text-red-600 bg-yellow-100 rounded-2xl p-2"></span>
        </div>
        <div class="form-group">
            <label asp-for="Content" class="control-label"></label>
            <textarea asp-for="Content" class="block p-2 rounded-lg border-2 border-solid w-full" style="height: 450px"></textarea>
            <span asp-validation-for="Content" class="text-red-600 bg-yellow-100 rounded-2xl p-2"></span>
        </div>
        <div class="form-group">
            <label asp-for="CategoryId" class="control-label"></label>
            <select asp-for="CategoryId" class="block p-2 rounded-lg border-2 border-solid" asp-items="ViewBag.Names"></select>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="" />
        </div>
    </form>
</div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
