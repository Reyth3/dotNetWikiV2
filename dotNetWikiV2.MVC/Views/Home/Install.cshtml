@model dotNetWikiV2.MVC.Models.DB.InstallationSettings

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Installation</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-indigo-200 h-full">

    <div class="bg-indigo-50 border-2 border-solid border-black m-8 p-4 text-center">
        <h1 class="text-2xl">.NET Wiki Installation</h1>
        <p class="text-lg pt-2">Welcome to the .NET wiki! It seems like you are running this software for the first time. Please configure your wiki instance to fit your project's needs and click the Confirm button to save the changes. This page won't be accessible after thie initial installation process is complete.</p>
        <div style="max-width: 300px" class="p-2 m-2 mx-auto">
            <form asp-action="InstallConfirm" method="post">


                <label class="text-lg pt-2 font-medium" asp-for="SiteName">Website Name</label>
                <input class="w-full m-2 p-2 rounded" type="text" asp-for="SiteName" />
                <label class="text-lg pt-2 font-medium" asp-for="SiteLogoUrl">Website Logo (URL):</label>
                <input class="w-full m-2 p-2 rounded" type="text" asp-for="SiteLogoUrl" />

                <label class="text-lg pt-2 font-medium" for="adminUser">Admin Username</label>
                <input class="w-full m-2 p-2 rounded" type="text" name="adminUser" />

                <label class="text-lg pt-2 font-medium" for="adminPass">Admin Password</label>
                <input class="w-full m-2 p-2 rounded" type="password" name="adminPass" />

                <label class="text-lg pt-2 font-medium" for="adminPass">Default Page Category</label>
                <input class="w-full m-2 p-2 rounded" type="text" name="category" />

                <input class="m-2 p-2 rounded" type="checkbox" name="demoContent" value="true" />
                <label class="text-lg pt-2" for="demoContent">Install Demo Content</label>

                <input class="w-full m-2 p-2 rounded border-indigo-600 border-2 hover:bg-indigo-600 hover:border-0 hover:text-indigo-200 rounded-xl text-lg transition ease-in-out duration-300" type="submit" name="submit" />
            </form>
        </div>
    </div>

</body>
</html>
