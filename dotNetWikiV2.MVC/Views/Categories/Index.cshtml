@model IEnumerable<dotNetWikiV2.MVC.Models.DB.Category>

@{
    ViewData["Title"] = "Browse";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4 class="text-2xl pt-2">Browse Categories</h4>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-2">
        @foreach (var c in Model.OrderBy(o => o.Name))
        {
            <div class="text-center bg-indigo-200 rounded-md">
                @Html.ActionLink(c.Name, "Show", "Categories", new { id = c.CategoryId }, new { @class = "" })
            </div>
        }
    </div>
</div>

